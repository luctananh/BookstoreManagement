@model BookStore1.Models.User

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4 offset-md-4">
        <h2>Register</h2>
        <hr />
        <form asp-action="Register" asp-controller="Users" method="post">
            @if (ViewData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger mt-3">@ViewData["ErrorMessage"]</div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group py-3">
                <label class="mb-2" asp-for="Username"></label>
                <input asp-for="Username" class="form-control w-100 rounded-3 p-3" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group pb-3">
                <label class="mb-2" asp-for="Password"></label>
                <input asp-for="Password" type="password" class="form-control w-100 rounded-3 p-3" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group pb-3">
                <label class="mb-2" asp-for="Email"></label>
                <input asp-for="Email" class="form-control w-100 rounded-3 p-3" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-dark w-100 my-3">Register</button>
        </form>
        <p>
            Already have an account? <a asp-action="Login" asp-controller="Users">Login here</a>.
        </p>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
